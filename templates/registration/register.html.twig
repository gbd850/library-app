{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container mx-auto flex flex-col items-center p-4">
		<h2 class="text-2xl p-2 min-w-full text-center">Register</h2>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm, {'attr': {'class': 'min-w-full px-[25dvw]'}}) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword) }}

		<button type="submit" class="bg-blue-500 hover:bg-blue-600 rounded py-2 px-4 m-2 text-white min-w-full">Register</button>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
