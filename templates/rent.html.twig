{% extends 'base.html.twig' %}

{% block body %}

	<div class="container mx-auto flex justify-center p-4">
		{{ form_start(form) }}
		<p class="text-2xl">Are you sure you want to rent
			{{ book.title }}
			by
			{{ book.author }}?</p>
		<div class="flex justify-evenly items-center m-2">
			{{ form_widget(form) }}
			<a href="/" class="bg-red-500 hover:bg-red-600 rounded text-white px-4 py-2">No</a>
		</div>
		{{ form_end(form) }}
	</div>

{% endblock %}
